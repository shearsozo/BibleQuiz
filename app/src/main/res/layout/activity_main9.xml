<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.biblequiz.Main9Activity">

    <LinearLayout style="@style/LinearStyle">

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/title8" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/laststone" />
        <!--I took the photo, "5/8/18"-->

        <TextView
            style="@style/QuestionTextStyle"
            android:layout_gravity="center"
            android:text="@string/endingcomment" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonStartOver" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

