<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.biblequiz.Main4Activity">

    <LinearLayout style="@style/LinearStyle">

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/title3"

            />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/movie" />
        <!--"https://thriftshopperforpeace.wordpress.com/2015/01/16/take-me-out-to-the-movies/", "5/10/18"-->
        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question3"

            />

        <RadioGroup
            android:id="@+id/radioGroup3"
            style="@style/RadioGroupStyle">

            <RadioButton
                style="@style/AnswerChoicesStyle"
                android:text="@string/answer3a" />

            <RadioButton
                android:id="@+id/answer3"
                style="@style/AnswerChoicesStyle"
                android:text="@string/answer3b" />

            <RadioButton
                style="@style/AnswerChoicesStyle"
                android:text="@string/answer3c" />

            <RadioButton
                style="@style/AnswerChoicesStyle"
                android:text="@string/answer3d" />
        </RadioGroup>

        <TextView
            android:id="@+id/show_text_view"
            style="@style/ShowStyle"
            android:text=" " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonPrev" />

            <Button
                android:id="@+id/show_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showAnswer"
                android:text="Show Answer" />

            <Button
                android:id="@+id/next3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonNext" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>


